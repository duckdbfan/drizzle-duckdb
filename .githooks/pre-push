#!/usr/bin/env bash
set -euo pipefail

# This script is a fallback for users who don't use pre-commit framework.
# For full hook support, install pre-commit: https://pre-commit.com/

if ! command -v bun >/dev/null 2>&1; then
  echo "bun is required for tests" >&2
  exit 1
fi

echo "Running test suite before push..."
CI=1 bun run test

echo "Pre-push checks passed!"
